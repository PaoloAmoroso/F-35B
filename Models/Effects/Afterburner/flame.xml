<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>FlameNOALS</name>
    <path>Classic/flame.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>FlameNOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>FlameALS</name>
    <path>ALS/flame.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>FlameALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>FlameHDR</name>
    <path>HDR/flame.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>FlameHDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
